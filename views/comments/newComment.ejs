<% include ../partials/header %>

<div class="row">
<div class="col">
  <h1>Add a new comment to the <%= hike.name%> </h1>

  <form action="/hikes/<%= hike._id%>/comments" method="POST">
    <div class="form-group">
      <label for="author">Author:</label>
      <input  class="form-control" type="text" name="comment[author]" placeholder="author" id="author">
    </div>

    <div class="form-group">
      <label for="text">Comment:</label>
      <input class="form-control" type="text" name="comment[text]" placeholder="text" id="text">
    </div>

    <button type="submit" class="btn btn-primary btn-block" >Submit</button>
  </form>

<a href="/hikes" class="btn pt-3" >Go Back</a>

</div>
<!-- end col -->
</div>
<!-- end row -->

<% include ../partials/footer %>