<% include ../partials/header %>

<div class="row">
  <div class="col">
    <h1 style="text-align:center;">Edit <%= hike.name %></h1>
      <div style="width: 30%; margin:5% auto;">
        <form action="/hikes/<%= hike._id %>?_method=PUT" method="POST">
          <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" name="name" class="form-control" id="name" aria-describedby="name" value="<%= hike.name %>">
          </div>
          
          <div class="form-group">
            <label for="image">Image:</label>
            <input type="text" name="image" class="form-control" id="image" value="<%= hike.image %>">
          </div>
                  
          <div class="form-group">
              <label for="description">Description:</label>
              <input type="text" name="description" class="form-control" id="description" value="<%= hike.description %>">
          </div>
        
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
        <a href="/hikes" class="btn pt-3">Go Back</a>
      </div>
    </div>
</div>

    <% include ../partials/footer %>
