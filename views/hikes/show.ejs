<% include ../partials/header %>

<h1><%= hike.name %></h1>
<img src="<%=hike.image %>" alt="hike">
<p><%= hike.description %></p>

<h3>Comments:</h3>
<p>
    <a href="/hikes/<%=hike._id%>/comments/new" class="btn btn-success" >Add new comment</a>
</p>

<% hike.comments.forEach(function(comment){ %>
    <p> <strong><%= comment.author%>:</strong>
       <%= comment.text%></p>
<% }) %>

<% include ../partials/footer %>